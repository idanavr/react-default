{
  "name": "react-default",
  "version": "1.0.0",
  "description": "Starter kit for reactjs",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel clientdebug:open *:watch",
    "clientdebug:open": "node server/devServer.js",
    "serverdebug:open": "nodemon server/devServer.js",
    "preproduction": "npm run build",
    "production": "SET NODE_ENV=production && node server/distServer.js",
    "prebuild": "npm-run-all --parallel test lint security-check",
    "build": "webpack --config ./server/config/webpack.config.prod",
    "preadd": "npm run build",
    "add": "git add .",
    "test": "mocha --compilers js:babel-core/register client/**/*.test.js",
    "lint": "esw client server",
    "lint:watch": "npm run lint -- --watch",
    "security-check": "nsp check"
  },
  "keywords": [
    "react default",
    "react",
    "redux",
    "nodejs",
    "mongoose",
    "jwt",
    "eslint"
  ],
  "author": "Idan Avrahami",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.16.2",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "express": "^4.15.2",
    "helmet": "^3.8.2",
    "jsonwebtoken": "^8.0.1",
    "mongodb": "^2.2.31",
    "mongoose": "^4.11.12",
    "npm-run-all": "^4.1.2",
    "prop-types": "^15.5.10",
    "react": "^15.6.2",
    "react-dom": "^15.6.2",
    "react-redux": "^5.0.4",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.24.1",
    "babel-eslint": "^8.0.0",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "css-loader": "^0.28.0",
    "eslint": "^4.7.0",
    "eslint-plugin-react": "^7.3.0",
    "eslint-watch": "^3.1.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^2.30.1",
    "jsdom": "^11.3.0",
    "json-loader": "^0.5.4",
    "mocha": "^3.5.0",
    "nodemon": "^1.11.0",
    "nsp": "^2.8.1",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-hot-middleware": "^2.18.0",
    "yarn": "^1.3.2"
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ]
  }
}
